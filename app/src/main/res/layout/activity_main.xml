<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerText"
        android:text="Practice Kotlin"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#e76f51"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    
    <Button
        android:id="@+id/btnLeapYear"
        android:text="Leap Year"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="#2a9d8f"
        android:layout_width="180dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btnTestResult"
        android:text="Test Result"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="#2a9d8f"
        android:layout_width="180dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btnCarFunction"
        android:text="Car Function"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="#2a9d8f"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btnScopeFunction"
        android:text="Scope Function 1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2a9d8f"
        android:layout_width="180dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/btnScopeFunction2"
        android:text="Scope Function 2"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2a9d8f"
        android:layout_width="180dp"
        android:layout_height="45dp"/>
    

</LinearLayout>